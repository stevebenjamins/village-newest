<div class="comments-pane">
	<div class="close-comments-pane">X</div>
	<div class="heading">
		<h3>Comments</h3>
		<p><a href="#"><%= raw(@post.headline) %></a></p>
	</div>
	
	<% if current_user %>
		<%= render 'comments/form' %>
	<% else %>
		<p style="margin-top: 30px"><%= link_to "Login with Facebook", user_omniauth_authorize_path(:facebook) %> to add a comment (we'll never post to your Facebook feed).</p>
	<% end %>
	
	<ul id="list-comments">
	<% if @post.comments.count != 0 %>
		<% @post.comments.each do |comment| %>
			<%= render 'comments/comment', :comment => comment %>
		<% end %>
	<% else %>
		<p><em>No comments yetâ€” you should add one!</em></p>
	<% end %>
</ul>
	

	<br class="clear"><br><br>

</div>