<div class="comments-pane">
	<div class="close-comments-pane">X</div>
	<div class="heading">
		<h3>Comments</h3>
		<p>
			<%= link_to raw(@commentable.headline), @commentable.url, :rel => "nofollow", :target => '_blank' if @commentable.class.name == 'Post' %>
			<%= @commentable.name if @commentable.class.name == 'Poll' %>
		</p>
	</div>
	
	<% if current_user %>
		<%= render 'comments/form' %>
	<% else %>
		<%= link_to new_user_registration_url(), :class => 'login-box' do %>Register now to add a comment. <span>It takes 25 seconds on average.</span><% end %>
	<% end %>
	
	<ul id="list-comments">
	<% if @comments.count != 0 %>
		<% @comments.each do |comment| %>
			<%= render 'comments/comment', :comment => comment if !comment.parent_id %>
		<% end %>
	<% else %>
		<p><em>No comments yetâ€” you should add one!</em></p>
	<% end %>
</ul>
	

	<br class="clear"><br><br>

</div>